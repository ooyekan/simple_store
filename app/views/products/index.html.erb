
<h1>Products Index</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Stock Quantity</th>
      <th>Category</th> <!-- Add a new column for Category -->
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product_path(product) %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= product.category.name %></td> <!-- Display the associated category name -->
      </tr>
    <% end %>
  </tbody>
</table>

